	},
	"keywords": [
		"sass",
		"scss",
		"dart-sass",
		"color",
		"a11y",
		"contrast"
	],
	"main": "./index.sass",
	"dependencies": {
		"@sass-fairy/exception": "^1.0.0"
	},
	"scripts": {
		"prepack": "clean-package --config $npm_package_config_clean_package",

{
	"name": "@sass-fairy/color",
	"description": "Provides extended functionality for generating new colors from an existing colors and building color themes in Sass",
	"version": "1.0.0",
	"license": "MIT",
	"author": {
		"name": "roydukkey",
		"email": "contact@changelog.me",

	},
	"repository": {
		"type": "git",
		"url": "https://github.com/roydukkey/sass-fairy.git",
		"directory": "packages/color"
	},
	"homepage": "https://github.com/roydukkey/sass-fairy/tree/master/packages/color#readme",
